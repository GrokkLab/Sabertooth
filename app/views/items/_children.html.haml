- model_class = Item.new.class
%h2=t 'Child Items'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:item_code)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:description)
      -#%th= model_class.human_attribute_name(:latitude)
      -#%th= model_class.human_attribute_name(:longitude)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @item.children.each do |item|
      %tr
        %td= link_to item.id, item_path(item)
        %td= item.item_code
        %td= item.category
        %td= item.description
        -#%td= item.latitude
        -#%td= item.longitude
        %td=l item.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), item_path(item), :class => 'btn btn-mini'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_item_path(item), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), item_path(item), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_item_path, :class => 'btn btn-primary'
